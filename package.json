{
  "name": "simple-tiling",
  "version": "9.0.0",
  "description": "GNOME Shell extension for automatic window tiling",
  "author": "Lucas Roesler",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "// TypeScript compilation - Use these to compile TypeScript to JavaScript": "",
    "build:ts": "tsc",
    "watch": "tsc --watch",
    "// Extension building - Use build to prepare the extension for installation": "",
    "prebuild": "npm run build:ts",
    "build": "node scripts/build.js",
    "clean": "node scripts/build.js clean",
    "// Packaging - Use these to create distributable ZIP files for sharing": "",
    "package": "npm run build && node scripts/package.js dev",
    "package:dist": "npm run build && node scripts/package.js dist",
    "// Installation - Use these to install the extension to GNOME Shell": "",
    "install:ext": "npm run build && node scripts/install.js",
    "reinstall": "npm run build && node scripts/install.js reinstall",
    "uninstall": "node scripts/install.js uninstall",
    "status": "node scripts/install.js status",
    "// Version management - Use these before releasing or publishing updates": "",
    "version:info": "node scripts/version.js show",
    "version:major": "node scripts/version.js bump-major",
    "version:minor": "node scripts/version.js bump-minor",
    "version:patch": "node scripts/version.js bump-patch",
    "version:set": "node scripts/version.js set-version",
    "postversion": "node scripts/version.js update-metadata",
    "// Development - Use dev for active development with auto-recompilation": "",
    "dev": "npm run watch",
    "lint": "echo 'No linter configured yet'",
    "// Convenience shortcuts - Use quick for rapid testing during development": "",
    "quick": "npm run build && npm run install:ext",
    "all": "npm run build",
    "help": "echo 'Run npm run to see all available commands' && npm run"
  },
  "devDependencies": {
    "@girs/adw-1": "latest",
    "@girs/clutter-14": "latest",
    "@girs/gio-2.0": "latest",
    "@girs/gjs": "latest",
    "@girs/glib-2.0": "latest",
    "@girs/gnome-shell": "latest",
    "@girs/gobject-2.0": "latest",
    "@girs/gtk-4.0": "latest",
    "@girs/meta-14": "latest",
    "@girs/shell-14": "latest",
    "@girs/st-14": "latest",
    "typescript": "^5.3.3"
  }
}
